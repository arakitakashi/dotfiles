{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.addMissingImports": "explicit",
  },
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.semi": true,
  "prettier.singleQuote": false,
  "prettier.jsxSingleQuote": false,
  "prettier.trailingComma": "es5",
  "prettier.arrowParens": "always",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "workbench.colorTheme": "Iceberg",
  "editor.linkedEditing": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "gitlens.advanced.messages": {
    "suppressGitMissingWarning": true,
  },
  "eslint.enable": true,
  "editor.inlineSuggest.enabled": true,
  "[astro]": {
    "editor.formatOnSave": true,
  },
  "[graphql]": {
    "editor.formatOnSave": true,
  },
  "[javascript]": {
    "editor.formatOnSave": true,
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
  },
  "[json]": {
    "editor.formatOnSave": true,
  },
  "[typescript]": {
    "editor.formatOnSave": true,
  },
  "[terraform]": {
    "editor.formatOnSave": true,
  },
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.env.osx": {
    "COLORTERM": "",
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "editor.wordWrap": "on",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1,
  },
  "git.autofetch": true,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.enabled": true,
  "haskell.manageHLS": "GHCup",
  "vscode-neovim.compositeKeys": {
    "jk": {
      "command": "vscode-neovim.lua",
      "args": [
        [
          "local code = require('vscode')",
          "code.action('vscode-neovim.escape')",
          "code.action('workbench.action.files.save')",
        ],
      ],
    },
  },
  "leetcode.defaultLanguage": "rust",
  "leetcode.workspaceFolder": "/Users/arakitakashi/.leetcode",
  "leetcode.hint.configWebviewMarkdown": false,
  "leetcode.hint.commandShortcut": false,
  "leetcode.filePath": {
    "default": {
      "folder": "./leetcode/src",
      "filename": "_${id}_${snake_case_name}.${ext}",
    },
  },
  "leetcode.hint.commentDescription": false,
  "rust-analyzer.debug.engine": "vadimcn.vscode-lldb",
  "rust-analyzer.diagnostics.disabled": ["unlinked-file"],
  "editor.fontFamily": "Berkeley Mono, Monaco, 'Courier New', monospace",
  "github.copilot.nextEditSuggestions.enabled": true,
  "claudeCode.preferredLocation": "panel",
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "editor.accessibilitySupport": "on",
}
